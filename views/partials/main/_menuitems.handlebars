{{#each menu}}
<div class="category" data-categoryid={{categoryID}} style="display: none;">
    <div class="title">{{categoryName}}</div>
    <div class="description">{{categoryDescription}}</div>
    <ul class="items">
        {{#each items}}
        <li class="item row">
            <div class="col-10 item-name">{{itemName}}
                <span class="item-viet">{{itemViet}}</span>
            </div>
            <div class="col-2 item-price text-right">{{itemPrice}}</div>
            <div class="col-12 item-des">{{itemDescription}}</div>
        </li>
        {{/each}}
    </ul>
</div>
{{/each}}