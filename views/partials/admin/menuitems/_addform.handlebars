<div class="add-mode col pt-3">
    <fieldset class="card card-body">
        <h2>Add a Menu Item</h2>
        <form id="newmenuitem">
            <div class="form-group form-row mb-0 pt-2">
                <label for="add_name_english" class="col">Name
                    <span class="col">
                        <input type="text" class="form-control" name="item_name_english" id="add_name_english" required />
                    </span>
                </label>
                <label for="add_name_vietnamese" class="col">Name (Vietnamese)
                    <span class="col">
                        <input type="text" class="form-control" name="item_name_vietnamese" id="add_name_vietnamese" />
                    </span>
                </label>
                <label for="add_price" class="col">Add Price
                    <span class="col">
                        <input type="text" placeholder="$" class="form-control" name="item_price" id="add_price" />
                    </span>
                </label>
            </div>
            <div class="form-group form-row mb-0 pt-2">
                <label for="add_menutype" class="col">Add to category
                    <span class="col">
                        {{assignJSON 'typelist' args.menutypes.success}}
                        <select class="form-control" id="add_menutype" name="menuTypeId" required>
                            <option value="">Select..</option>
                            {{#each this.typelist}}
                                <option value="{{this.id}}">
                                    {{this.menu_type_name}}
                                </option>
                            {{/each}}
                        </select>
                    </span>
                </label>
                <label for="add_category" class="col">Add to Subcategory
                    <span class="col">
                        {{assignJSON 'catlist' args.categories.success}}
                        <select class="form-control" id="add_category" name="menuCategoryId" required>
                            <option value="">Select..</option>
                            {{#each this.catlist}}
                                <option value="{{this.id}}">
                                    {{this.category_name}}
                                </option>
                            {{/each}}
                        </select>
                    </span>
                </label>
            </div>
            <div class="form-group form-row">
                <label for="add_description" class="col">Description</label>
                <textarea class="form-control" class="col" name="item_description" id="add_description" ></textarea>
            </div>
            <div class="form-group form-row">
                <button type="submit" id="submit_newmenuitem" class="btn btn-warning">Add Menu Item</button>
            </div>
        </form>
    </fieldset>
</div>