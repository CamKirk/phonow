<div class="row my-4 mx-0 grid" id="category-items">
    <div class="col">
    <form id="editcategory-" action="/api/newcategory" method="post">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="thead-inverse">
                <tr>
                    <th>#ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Modified</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {{!-- TODO add form field visibility to manipulated via on-click events --}}
                {{#if settings.menuitem.list}}
                    {{#each settings.menuitem.list}}
                        {{debug this}}
                         <tr class="edit-mode" id="edit-mitem-{{this.id}}">
                             <td class="id">
                                 <p>{{this.id}}</p>
                                 <input id="item_id" name="item_id" type="hidden" value="{{this.id}}">
                             </td>
                             <td class="name">
                                 <input type="text" class="form-control" name="item_name-{{this.id}}" id="item_name-{{this.id}}" value="{{this.item_name_english}}"/>
                             </td>
                             <td class="price">
                                 <input type="text" class="form-control" name="item_price-{{this.id}}" id="item_price-{{this.id}}" value="{{this.item_price}}"/>
                             </td>
                             <td class="category">
                                 <select class="form-control" id="item_category">
                                     {{#unless this.isActive}}<option value="">Select..</option>{{/unless}}
                                     <option>2</option>
                                     <option>3</option>
                                     <option>4</option>
                                     <option>5</option>
                                 </select>
                             </td>
                             <td class="form-check input-group status">
                                 <input class="form-check-input" type="checkbox" value="" id="status-" name="status-{{this.id}}" {{#if this.isActive}}checked{{/if}}>
                                 <label class="form-check-label">
                                     Enabled
                                 </label>
                             </td>
                             <td class="created">
                                 <p>{{this.createdAt}}</p>
                             </td>
                             <td class="modified">
                                 <p>{{this.updatedAt}}</p>
                             </td>
                             <td class="action">
                                 <button type="submit" class="btn btn-warning">Save Changes</button>
                             </td>
                         </tr>
                         <tr id="category-{{this.id}}">
                             <td class="id">{{this.id}}</td>
                             <td class="name">{{this.item_name_english}}</td>
                             <td class="price">{{this.item_price}}</td>
                             <td class="category">{{this.item_category}}</td>
                             <td class="status">{{#if this.isActive}}Enabled{{else}}Disabled{{/if}}</td>
                             <td class="created">{{this.createdAt}}</td>
                             <td class="modified">{{this.createdAt}}</td>
                             <td class="action"><i class="fa fa-edit"></i> <i class="fa fa-trash"></i></td>
                         </tr>
                    {{/each}}
                {{else}}
                        <tr class="no-results">
                            <td colspan="8">
                                <p>There are no items in your menu</p>
                            </td>
                        </tr>
                {{/if}}
                 </tbody>
             </table>
         </div>
     </form>
    </div>
  </div>