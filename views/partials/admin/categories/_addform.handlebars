<div class="edit-mode">
    <fieldset class="card card-body">
    <h3>Add a category</h3>
        <form id="newcategory" action="/api/newcategory" method="post">
            <div class="form-group">
                <div class="form-row">
                    <div class="col input-group">
                        <label for="category_name">Category Name</label>
                        <input type="text" class="form-control" name="category_name" id="category_name"/>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        <label for="category_description">Category Description</label>
                        <textarea class="form-control" name="category_description" id="category_description" rows="10"></textarea>
                    </div>
                </div>
                <div class="form-row clearfix">
                    <div class="col">
                         <button type="submit" class="btn btn-warning">Add Category</button>
                    </div>
                </div>
            </div>
        </form>
    </fieldset>
</div>
